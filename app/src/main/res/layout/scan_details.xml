<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSSIDValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSID"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/txtSSIDDescription"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtSSIDDescription"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/txtSSIDDescription"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txtSSIDDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSID"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtRSSIValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSSI"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/txtRSSIDescription"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/txtRSSIDescription"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtRSSIDescription"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/txtRSSIDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSSI"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSSIDDescription"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtBSSIDDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC ID"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRSSIDescription"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtBSSIDValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BSSID"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/txtBSSIDDescription"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/txtBSSIDDescription"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtBSSIDDescription"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>